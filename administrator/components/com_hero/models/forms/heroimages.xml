<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_HERO_FORM_LBL_HEROIMAGES_CREATED_BY" description="COM_HERO_FORM_DESC_HEROIMAGES_CREATED_BY" hidden="true" hint="COM_HERO_FORM_LBL_HEROIMAGES_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_HERO_FORM_LBL_HEROIMAGES_MODIFIED_BY" description="COM_HERO_FORM_DESC_HEROIMAGES_MODIFIED_BY" hidden="true" hint="COM_HERO_FORM_LBL_HEROIMAGES_MODIFIED_BY"/>
    <field name="title" type="text" filter="safehtml" required="true" label="COM_HERO_FORM_LBL_HEROIMAGES_TITLE" description="COM_HERO_FORM_DESC_HEROIMAGES_TITLE" hint="COM_HERO_FORM_LBL_HEROIMAGES_TITLE"/>
    <field name="sub" type="text" filter="safehtml" label="COM_HERO_FORM_LBL_HEROIMAGES_SUB" description="COM_HERO_FORM_DESC_HEROIMAGES_SUB" hint="COM_HERO_FORM_LBL_HEROIMAGES_SUB"/>
    <field name="image" type="media" directory="hero" label="COM_HERO_FORM_LBL_HEROIMAGES_IMAGE" description="COM_HERO_FORM_DESC_HEROIMAGES_IMAGE" hint="COM_HERO_FORM_LBL_HEROIMAGES_IMAGE"/>
    <field name="link" type="text" filter="safehtml" label="COM_HERO_FORM_LBL_HEROIMAGES_LINK" description="COM_HERO_FORM_DESC_HEROIMAGES_LINK" hint="COM_HERO_FORM_LBL_HEROIMAGES_LINK"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
