<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_TIMELINE_FORM_LBL_ITEM_CREATED_BY" description="COM_TIMELINE_FORM_DESC_ITEM_CREATED_BY" hidden="true" hint="COM_TIMELINE_FORM_LBL_ITEM_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_TIMELINE_FORM_LBL_ITEM_MODIFIED_BY" description="COM_TIMELINE_FORM_DESC_ITEM_MODIFIED_BY" hidden="true" hint="COM_TIMELINE_FORM_LBL_ITEM_MODIFIED_BY"/>
    <field name="title" type="text" filter="safehtml" required="true" label="COM_TIMELINE_FORM_LBL_ITEM_TITLE" description="COM_TIMELINE_FORM_DESC_ITEM_TITLE" hint="COM_TIMELINE_FORM_LBL_ITEM_TITLE"/>
    <field name="description" type="textarea" filter="safehtml" label="COM_TIMELINE_FORM_LBL_ITEM_DESCRIPTION" description="COM_TIMELINE_FORM_DESC_ITEM_DESCRIPTION" hint="COM_TIMELINE_FORM_LBL_ITEM_DESCRIPTION"/>
    <field name="date" type="calendar" class="inputbox" timeformat="12" filter="server_utc" showtime="false" singleheader="false" todaybutton="false" weeknumbers="false" filltable="false" required="true" label="COM_TIMELINE_FORM_LBL_ITEM_DATE" description="COM_TIMELINE_FORM_DESC_ITEM_DATE" hint="COM_TIMELINE_FORM_LBL_ITEM_DATE"/>
    <field name="date_text" type="text" filter="safehtml" label="Date text" description="Date text" hint="Date text"/>
    <field name="image" type="media" directory="timeline" label="COM_TIMELINE_FORM_LBL_ITEM_IMAGE" description="COM_TIMELINE_FORM_DESC_ITEM_IMAGE" hint="COM_TIMELINE_FORM_LBL_ITEM_IMAGE"/>
    <field name="video" type="text" filter="safehtml" label="COM_TIMELINE_FORM_LBL_ITEM_VIDEO" description="COM_TIMELINE_FORM_DESC_ITEM_VIDEO" hint="COM_TIMELINE_FORM_LBL_ITEM_VIDEO"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
