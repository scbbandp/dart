<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_LEADERSHIP_FORM_LBL_MEMBER_CREATED_BY" description="COM_LEADERSHIP_FORM_DESC_MEMBER_CREATED_BY" hidden="true" hint="COM_LEADERSHIP_FORM_LBL_MEMBER_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_LEADERSHIP_FORM_LBL_MEMBER_MODIFIED_BY" description="COM_LEADERSHIP_FORM_DESC_MEMBER_MODIFIED_BY" hidden="true" hint="COM_LEADERSHIP_FORM_LBL_MEMBER_MODIFIED_BY"/>
    <field name="name" type="text" filter="safehtml" required="true" label="COM_LEADERSHIP_FORM_LBL_MEMBER_NAME" description="COM_LEADERSHIP_FORM_DESC_MEMBER_NAME" hint="COM_LEADERSHIP_FORM_LBL_MEMBER_NAME"/>
    <field name="title" type="text" filter="safehtml" label="COM_LEADERSHIP_FORM_LBL_MEMBER_TITLE" description="COM_LEADERSHIP_FORM_DESC_MEMBER_TITLE" hint="COM_LEADERSHIP_FORM_LBL_MEMBER_TITLE"/>
    <field name="company" type="text" filter="safehtml" label="COM_LEADERSHIP_FORM_LBL_MEMBER_COMPANY" description="COM_LEADERSHIP_FORM_DESC_MEMBER_COMPANY" hint="COM_LEADERSHIP_FORM_LBL_MEMBER_COMPANY"/>
    <field name="linkedin" type="text" filter="safehtml" label="Linkedin" description="Linkedin" hint="Linkedin"/>
    <field name="bio" type="editor" editor="|" filter="JComponentHelper::filterText" label="COM_LEADERSHIP_FORM_LBL_MEMBER_BIO" description="COM_LEADERSHIP_FORM_DESC_MEMBER_BIO" hint="COM_LEADERSHIP_FORM_LBL_MEMBER_BIO"/>
    <field name="highlights" type="editor" editor="|" filter="JComponentHelper::filterText" label="COM_LEADERSHIP_FORM_LBL_MEMBER_HIGHLIGHTS" description="COM_LEADERSHIP_FORM_DESC_MEMBER_HIGHLIGHTS" hint="COM_LEADERSHIP_FORM_LBL_MEMBER_HIGHLIGHTS"/>
    <field name="community" type="editor" editor="|" filter="JComponentHelper::filterText" label="COM_LEADERSHIP_FORM_LBL_MEMBER_COMMUNITY" description="COM_LEADERSHIP_FORM_DESC_MEMBER_COMMUNITY" hint="COM_LEADERSHIP_FORM_LBL_MEMBER_COMMUNITY"/>
    <field name="tile" type="media" directory="leadership" label="Tile" description="Tile" hint="Tile"/>
	<field name="featured" type="media" directory="leadership" label="Featured" description="Featured" hint="Featured"/>
	<field name="image" type="media" directory="leadership" label="COM_LEADERSHIP_FORM_LBL_MEMBER_IMAGE" description="COM_LEADERSHIP_FORM_DESC_MEMBER_IMAGE" hint="COM_LEADERSHIP_FORM_LBL_MEMBER_IMAGE"/>
    <field name="alias" type="text" class="inputbox" generator="name" label="COM_LEADERSHIP_FORM_LBL_MEMBER_ALIAS" description="COM_LEADERSHIP_FORM_DESC_MEMBER_ALIAS" hint="COM_LEADERSHIP_FORM_LBL_MEMBER_ALIAS"/>
    <field name="page_title" filter="safehtml" type="text" label="Page title" description="Page title" hint="Page title"/>
    <field name="meta_desc" filter="safehtml" type="textarea" label="Meta description" description="Meta description" hint="Meta description"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
